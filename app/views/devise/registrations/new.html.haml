%h2 Welcome
= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  = devise_error_messages!
  %div
    = f.label :name
    %br/
    = f.text_field :name
  %div
    = f.label :email
    %br/
    = f.email_field :email
  %div
    = f.label :password
    %br/
    = f.password_field :password
  %div
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation
  %div
    = f.label :learning_interest_list, "What do you want to learn?"
    %br/
    = f.text_field :learning_interest_list, :class => "tag_list" # "data-pre" => @user.learning_interests.map(&:attributes).to_json
  %div
    = f.label :teaching_interest_list, "What do you want to teach?"
    %br/
    = f.text_field :teaching_interest_list, :class => "tag_list"
  = f.fields_for :location_attributes do |l|
    %div
      = l.label :address
      %br/
      = l.text_field :address
  %div= f.submit "Sign up"
= render "links"
